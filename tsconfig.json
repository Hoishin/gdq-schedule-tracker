{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"lib": ["esnext"],
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "out",
		"importHelpers": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*.ts"]
}
